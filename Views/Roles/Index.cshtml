@model IEnumerable<Biblioteca_Mia_Raymundo.Models.Domain.Rol>

@{
    Layout = "_LayoutDashBoard";
}

<h1 class="text-center mb-4">Dashboard de Roles</h1>

<div class="container-fluid">
    <div class="card border rounded shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2><strong>Lista de Roles</strong></h2>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Crear" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Nuevo Rol
                </a>
            </div>

            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table table-hover w-100 mx-auto border rounded shadow" id="tblRoles">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rol in Model)
                            {
                                <tr>
                                    <td>@rol.PkRol</td>
                                    <td>@rol.Nombre</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Editar" asp-route-id="@rol.PkRol">
                                            <i class="fa-solid fa-pen-to-square"></i> Editar
                                        </a>
                                        <button class="btn btn-danger eliminar-rol"
                                                data-id="@rol.PkRol" data-nombre="@rol.Nombre">
                                            <i class="fa-solid fa-trash"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted">No hay roles registrados</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("? Script de roles cargado correctamente");

            if (typeof $ === 'undefined') {
                console.error("jQuery NO está cargado.");
            } else {
                console.log("jQuery está cargado correctamente.");
            }

            $('#tblRoles').DataTable({
                language: {
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

            $(document).on('click', '.eliminar-rol', function () {
                console.log(" Se hizo clic en un botón de eliminar rol");

                var rolId = $(this).data('id');
                var rolNombre = $(this).data('nombre');

                if (!rolId) {
                    console.error(" Error: data-id no está definido en el botón de eliminar.");
                    return;
                }

                Swal.fire({
                    title: "¿Estás seguro?",
                    text: "Eliminarás el rol " + rolNombre + ". Esta acción no se puede deshacer.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sí, eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        console.log(" Rol confirmado para eliminación, enviando petición AJAX...");

                        $.ajax({
                            url: '/Roles/Delete/' + rolId,
                            type: 'POST',
                            contentType: 'application/json',

                            success: function (response) {
                                console.log("Respuesta del servidor:", response);

                                if (response.success) {
                                    Swal.fire({
                                        title: "¡Eliminado!",
                                        text: response.message,
                                        icon: "success",
                                        timer: 1500,
                                        showConfirmButton: false
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    console.error(" Error en la eliminación:", response.message);
                                    Swal.fire({
                                        title: "Error",
                                        text: response.message,
                                        icon: "error"
                                    });
                                }
                            },
                            error: function (xhr, status, error) {
                                console.error(" Error en AJAX:", error);
                                console.error(" Respuesta del servidor:", xhr.responseText);
                                Swal.fire({
                                    title: "Error",
                                    text: "No se pudo eliminar el rol.",
                                    icon: "error"
                                });
                            }
                        });
                    } else {
                        console.log(" Eliminación cancelada por el usuario.");
                    }
                });
            });
        });
    </script>
}
