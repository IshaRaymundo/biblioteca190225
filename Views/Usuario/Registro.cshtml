@model Biblioteca_Mia_Raymundo.Models.ViewModels.RegisterViewModels
@{
    ViewData["Title"] = "Registro de Usuario";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Registro de Usuarios - Biblioteca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Estilos generales */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #fbc2eb, #a6c1ee); /* Colores suaves de gradiente */
            height: 100vh;
        }

        .center-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-card {
            background-color: #fff;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .register-card h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #5d3fd3; /* Color morado suave */
            }

            .register-card label {
                color: #5d3fd3; /* Color morado suave */
                font-weight: 600;
            }

            .register-card input {
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                padding: 12px;
                width: 100%;
                margin-bottom: 20px;
                transition: border 0.3s;
            }

                .register-card input:focus {
                    border-color: #f79c42; /* Naranja suave */
                    box-shadow: 0 0 5px rgba(247, 156, 66, 0.5);
                    outline: none;
                }

            .register-card button {
                width: 100%;
                padding: 12px;
                background-color: #f79c42; /* Naranja suave */
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 16px;
                cursor: pointer;
                transition: background 0.3s ease-in-out;
            }

                .register-card button:hover {
                    background-color: #f67e0e; /* Naranja más oscuro */
                }

        .login-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }

            .login-link a {
                color: #5d3fd3; /* Color morado suave */
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        /* Estilos para la validación de errores */
        .validation-summary-errors {
            margin-bottom: 20px;
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <div class="center-wrapper">
        <div class="register-card">
            <h2>Formulario de Registro</h2>
            <form method="post" action="/Usuario/Registro">
                <div asp-validation-summary="All" class="validation-summary-errors"></div>

                <div>
                    <label asp-for="Nombre">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="UserName">Usuario:</label>
                    <input asp-for="UserName" class="form-control" placeholder="Ingresa tu nombre de usuario" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Password">Contraseña:</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Confirmar Contraseña:</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirma tu contraseña" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit">Registrarse</button>
                </div>
            </form>
            <div class="login-link">
                <p>¿Ya tienes cuenta? <a asp-controller="Usuario" asp-action="Login">Inicia sesión aquí</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
