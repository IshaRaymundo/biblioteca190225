@model Biblioteca_Mia_Raymundo.Models.Domain.Usuario

@{
    Layout = "_LayoutDashBoard";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar usuario</strong></h1>
            </div>

            <div class="card-body">
                <form asp-action="Editar" method="post">

                    <!-- Campo oculto con el ID del usuario -->
                    <input asp-for="PkUsuario" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa la contraseña" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                   
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto">
                            <i class="bi bi-person-fill"></i> Guardar
                        </button>
                    </div>
                </form>

                <a asp-controller="Usuario" asp-action="Index" class="btn btn-outline-dark mt-3">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
