@model Biblioteca_Mia_Raymundo.Models.Domain.Libro

@{
    Layout = "_LayoutDashBoard";
}

<h2>Agregar Libro</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Autor"></label>
        <input asp-for="Autor" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Anio"></label>
        <input asp-for="Anio" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Genero"></label>
        <input asp-for="Genero" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
