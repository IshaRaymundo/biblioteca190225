@model IEnumerable<Biblioteca_Mia_Raymundo.Models.Domain.Usuario>

@{
    Layout = "_LayoutDashBoard";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-users"></i> Usuarios Registrados desde home>users </h2>

    <div class="row">
        <div class="offset-10 col-3 mb-3">
            <a asp-action="Crear" asp-controller="Usuario" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Usuario</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.PkUsuario</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.UserName</td>
                        <td>@usuario.FkRol</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@usuario.PkUsuario">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@usuario.PkUsuario">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No hay usuarios registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
