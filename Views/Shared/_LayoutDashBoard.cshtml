<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Biblioteca Mia </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Biblioteca_Mia_Raymundo.styles.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            background: linear-gradient(to bottom, #481040, #8A2BE2);
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
            box-shadow: 5px 0px 10px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
        }

            .sidebar h3 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: white;
                text-decoration: none;
                font-size: 18px;
                transition: all 0.3s;
                border-radius: 8px;
                margin: 5px 15px;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    transform: scale(1.05);
                }

            .sidebar i {
                font-size: 22px;
                width: 30px;
                text-align: center;
            }

        /* Botón de colapso */
        .toggle-btn {
            position: absolute;
            top: 10px;
            right: -40px;
            background: #4B0082;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            color: white;
            transition: all 0.3s;
        }

            .toggle-btn:hover {
                background: #8A2BE2;
            }

        /* Sidebar colapsado */
        .sidebar.collapsed {
            width: 70px;
        }

            .sidebar.collapsed h3,
            .sidebar.collapsed span {
                display: none;
            }

            .sidebar.collapsed a {
                justify-content: center;
            }

            .sidebar.collapsed i {
                margin: 0;
            }

        .content {
            margin-left: 260px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.expanded {
                margin-left: 70px;
            }

        /* Estilos del botón de cerrar sesión */
        .logout-btn {
            margin-top: auto; /* Empuja el botón hacia abajo */
            background-color: #d9534f; /* Rojo de Bootstrap */
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            text-align: center;
        }

            .logout-btn:hover {
                background-color: #c9302c; /* Rojo oscuro de Bootstrap */
                transform: scale(1.05);
            }

            .logout-btn:focus {
                outline: none;
            }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">☰</button>
        <h3>Biblionline</h3>
        <a asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fas fa-home"></i> <span>Usuarios</span></a>
        <a asp-area="" asp-controller="Roles" asp-action="Index"><i class="fas fa-envelope"></i> <span>Roles</span></a>
        <a asp-area="" asp-controller="Libros" asp-action="Index"><i class="fas fa-book"></i> <span>Libros</span></a>
        <a asp-area="" asp-controller="Home" asp-action="Prestamos"><i class="fas fa-hand-holding"></i> <span>Préstamos</span></a>
        <a asp-area="" asp-controller="Home" asp-action="Config"><i class="fas fa-cogs"></i> <span>Configuración</span></a>
        <a asp-area="" asp-controller="Home" asp-action="Reportes"><i class="fas fa-chart-bar"></i> <span>Reportes</span></a>
        <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-question-circle"></i> <span>Ayuda</span></a>

        <!-- Botón de Cerrar sesión -->
        <form action="/logout" method="post" class="mt-auto">
            <button type="submit" class="logout-btn">Cerrar sesión</button>
        </form>
    </div>

    <div class="content" id="content">
        <header class="header">
        </header>

        <div class="container main-content">
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>

    </div>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("content").classList.toggle("expanded");
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
